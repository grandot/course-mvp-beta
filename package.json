{
  "name": "intentos-course-mvp",
  "version": "1.0.0",
  "description": "IntentOS Course MVP - 三層語義架構系統",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node src/index.js",
    "lint": "eslint src/ --ext .js || true",
    "lint:fix": "eslint src/ --fix",
    "prettier": "prettier --write src/",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:slot": "jest tests/slot-template/ --watch",
    "migrate:slot-template": "node scripts/migrations/001_slot_template_setup.js",
    "migrate:slot-template:rollback": "node scripts/migrations/001_slot_template_setup.js rollback",
    "deploy:indexes": "node scripts/deploy-firestore-indexes.js deploy",
    "check:indexes": "node scripts/deploy-firestore-indexes.js check",
    "validate:indexes": "node scripts/deploy-firestore-indexes.js validate",
    "logs": "node scripts/get-render-logs.js"
