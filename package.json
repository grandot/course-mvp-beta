  "keywords": [
    "line-bot",
    "course-management",
    "ai",
    "semantic-processing"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "firebase-admin": "^13.4.0",
    "js-yaml": "^4.1.0",
    "openai": "^5.10.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-local": "file:eslint-plugin-local",
    "jest": "^30.0.5",
    "prettier": "^3.2.5",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
