rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // 課程圖片：僅允許對應用戶存取
    match /courses-images/{courseId}/{imageFile} {
      allow read: if true; // 圖片可公開讀取
      allow write: if request.auth != null; // 僅登入用戶可上傳
    }
    
    // 臨時圖片：僅允許對應用戶存取
    match /temp_images/{tempId}/{imageFile} {
      allow read, write: if request.auth != null;
    }
    
    // 系統檔案：禁止存取
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}