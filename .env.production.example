# 生產環境配置範例
# 複製此檔案為 .env.production 並填入實際值

# LINE Bot Configuration
LINE_CHANNEL_ACCESS_TOKEN=your_production_line_channel_access_token
LINE_CHANNEL_SECRET=your_production_line_channel_secret

# OpenAI Configuration  
OPENAI_API_KEY=your_production_openai_api_key

# Firebase Configuration (生產環境)
FIREBASE_PROJECT_ID=your_production_firebase_project_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRODUCTION_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_STORAGE_BUCKET=your-production-project.appspot.com

# Google Calendar Configuration
GOOGLE_CALENDAR_API_KEY=your_production_google_calendar_api_key
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-calendar-service@your-project.iam.gserviceaccount.com

# Application Configuration
PORT=3000
NODE_ENV=production

# Feature Flags (生產環境)
ENABLE_AI_FALLBACK=true
ENABLE_REMINDERS=true
ENABLE_IMAGE_UPLOAD=true

# Security Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Debugging (生產環境建議關閉)
DEBUG_INTENT_PARSING=false
DEBUG_SLOT_EXTRACTION=false

# Monitoring
ENABLE_DETAILED_LOGGING=false
LOG_LEVEL=error