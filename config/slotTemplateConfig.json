{
  "promptTemplates": {
    "multiProblem": {
      "prefix": "我需要一些更清楚的資訊才能幫您安排課程：",
      "format": "• {problem_description}",
      "footer": "請重新完整輸入課程資訊，例如：「{example}」"
    },
    "singleProblem": {
      "confirmation": "✅ 已記錄：{confirmed_info}",
      "question": "🕐 還需要確認：{missing_info}",
      "example": "例如可以回覆：{example}"
    },
    "mixedExtraction": {
      "prefix": "我已智能分離您的輸入內容：",
      "separatedInfo": "• {field_name}：{value}",
      "completion": "信息已完整，正在為您安排課程..."
    }
  },
  
  "problemDescriptions": {
    "invalidDate": "日期資訊不清楚（「{value}」無法識別為有效日期）",
    "vagueTime": "時間需要更具體（「{value}」請提供確切時間）",
    "missingRequired": "缺少{field_name}資訊",
    "missingTime": "需要確認上課時間",
    "missingDate": "需要確認上課日期",
    "missingCourse": "需要確認課程名稱",
    "missingStudent": "需要確認學生姓名",
    "formatError": "格式不正確（「{value}」請檢查格式）",
    "mixedExtraction": "已智能分離混雜內容"
  },
  
  "fieldNames": {
    "course": "課程",
    "date": "日期",
    "time": "時間",
    "student": "學生",
    "teacher": "老師",
    "location": "地點"
  },
  
  "examples": {
    "completeCourse": [
      "明天下午3點小美大提琴課",
      "7月30日晚上7點鋼琴課",
      "後天上午10點小提琴課"
    ],
    "timeExamples": [
      "下午3點",
      "晚上7點半",
      "19:30",
      "上午10點"
    ],
    "dateExamples": [
      "明天",
      "後天",
      "7月30日",
      "2025-07-30"
    ],
    "courseExamples": [
      "大提琴課",
      "小提琴課",
      "鋼琴課"
    ]
  },
  
  "validationRules": {
    "string": {
      "minLength": 1,
      "maxLength": 1000,
      "trim": true
    },
    "number": {
      "min": 0,
      "max": 9007199254740991
    },
    "date": {
      "format": "^\\\\d{4}-\\\\d{2}-\\\\d{2}$",
      "futureOnly": false
    },
    "time": {
      "format": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$",
      "range": ["00:00", "23:59"]
    },
    "object": {
      "requiredFields": []
    }
  },
  
  "slotMerger": {
    "conflictStrategies": {
      "overwrite": "overwrite",
      "confirm": "confirm",
      "merge": "merge",
      "keepExisting": "keep_existing"
    },
    "defaultStrategy": "overwrite",
    "taskTimeout": 1800000
  },
  
  "problemDetection": {
    "datePatterns": {
      "invalid": ["無效", "錯誤", "不正確"],
      "vague": ["某天", "改天", "之後"]
    },
    "timePatterns": {
      "vague": ["下午", "上午", "晚上", "早上"],
      "specific": ["點", ":[0-9]", "時"]
    },
    "mixedExtractionPatterns": {
      "dateTimeMixed": "(明天|後天|今天|昨天|[0-9]+月[0-9]+日).*(下午|上午|晚上|[0-9]+點|[0-9]+:[0-9]+)",
      "dateMixed": "(明天|後天|今天|昨天|[0-9]+月[0-9]+日)",
      "timeMixed": "(下午|上午|晚上|[0-9]+點|[0-9]{1,2}:[0-9]{2})"
    }
  },
  
  "taskTrigger": {
    "maxRetries": 3,
    "retryDelay": 1000,
    "executionTimeout": 30000
  },
  
  "tempSlotState": {
    "maxCacheSize": 1000,
    "defaultTtlMinutes": 30,
    "cleanupIntervalMinutes": 10
  }
}