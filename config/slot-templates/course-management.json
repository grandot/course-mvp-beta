{
  "template_id": "course_management",
  "template_name": "課程管理",
  "version": "1.0.0",
  "description": "用於課程新增、修改、取消等相關操作的 Slot Template",
  "slots": {
    "student": {
      "type": "string",
      "required": true,
      "description": "學生姓名",
      "validation": {
        "min_length": 1,
        "max_length": 50,
        "pattern": "^[\\u4e00-\\u9fff\\w\\s]+$"
      },
      "examples": ["小光", "小明", "Amy", "王小華"],
      "aliases": ["學生", "孩子", "小朋友"]
    },
    "course": {
      "type": "string", 
      "required": true,
      "description": "課程名稱",
      "validation": {
        "min_length": 1,
        "max_length": 100,
        "pattern": "^[\\u4e00-\\u9fff\\w\\s]+$"
      },
      "examples": ["鋼琴課", "數學課", "英文課", "游泳課", "小提琴課"],
      "aliases": ["課程", "課", "班級"]
    },
    "date": {
      "type": "date",
      "required": true,
      "description": "上課日期",
      "validation": {
        "format": "YYYY-MM-DD",
        "future_only": false,
        "max_days_ahead": 365
      },
      "examples": ["2025-08-01", "明天", "下週三", "8月15日"],
      "aliases": ["日期", "時間", "哪天"]
    },
    "time": {
      "type": "time",
      "required": true,
      "description": "上課時間",
      "validation": {
        "format": "HH:mm",
        "range": ["06:00", "23:00"]
      },
      "examples": ["14:00", "下午兩點", "晚上七點半", "19:30"],
      "aliases": ["時間", "幾點"]
    },
    "location": {
      "type": "string",
      "required": false,
      "description": "上課地點",
      "default": null,
      "validation": {
        "max_length": 200
      },
      "examples": ["板橋教室", "線上", "家裡", "學校", "補習班"],
      "aliases": ["地點", "位置", "教室", "哪裡"]
    },
    "teacher": {
      "type": "string",
      "required": false,
      "description": "授課老師",
      "default": null,
      "validation": {
        "max_length": 100,
        "pattern": "^[\\u4e00-\\u9fff\\w\\s]+$"
      },
      "examples": ["王老師", "李老師", "Miss Chen", "張教練"],
      "aliases": ["老師", "教師", "指導老師", "教練"]
    },
    "reminder": {
      "type": "object",
      "required": false,
      "description": "提醒設定",
      "default": {"minutes_before": 10, "enabled": true},
      "schema": {
        "minutes_before": "number",
        "enabled": "boolean",
        "custom_message": "string"
      },
      "validation": {
        "minutes_before": {
          "min": 1,
          "max": 1440
        }
      },
      "examples": [
        {"minutes_before": 10},
        {"minutes_before": 30, "custom_message": "準備出門上課囉！"}
      ],
      "aliases": ["提醒", "通知", "鬧鐘"]
    },
    "repeat": {
      "type": "object",
      "required": false,
      "description": "重複設定",
      "default": null,
      "schema": {
        "pattern": "string",
        "frequency": "number",
        "end_condition": "object",
        "exceptions": "array"
      },
      "validation": {
        "pattern": {
          "enum": ["daily", "weekly", "monthly", "yearly"]
        },
        "frequency": {
          "min": 1,
          "max": 12
        }
      },
      "examples": [
        {"pattern": "weekly", "frequency": 1},
        {"pattern": "monthly", "frequency": 2, "end_condition": {"type": "date", "value": "2025-12-31"}}
      ],
      "aliases": ["重複", "定期", "固定", "每週", "每月"]
    },
    "note": {
      "type": "string",
      "required": false,
      "description": "附註說明",
      "default": null,
      "validation": {
        "max_length": 500
      },
      "examples": ["記得帶書", "今天有考試", "請準時到達"],
      "aliases": ["備註", "說明", "注意事項"]
    }
  },
  "completion_rules": {
    "minimum_required": ["student", "course", "date", "time"],
    "auto_complete": ["reminder"],
    "optional": ["location", "teacher", "repeat", "note"],
    "conditional_required": {
      "has_repeat": ["repeat.pattern", "repeat.frequency"],
      "custom_reminder": ["reminder.custom_message"]
    },
    "priority_order": ["student", "course", "date", "time", "location", "teacher", "reminder", "repeat", "note"]
  },
  "intents": ["record_course", "modify_course", "cancel_course", "reschedule_course"],
  "question_templates": {
    "student": [
      "請問是哪位學生要上課？",
      "學生的姓名是？",
      "是誰要上這堂課？"
    ],
    "course": [
      "請問要上什麼課程？",
      "課程名稱是什麼？",
      "要學習什麼內容？"
    ],
    "date": [
      "請問要安排在哪一天？",
      "上課日期是？",
      "想要安排在什麼時候？"
    ],
    "time": [
      "請問幾點開始上課？",
      "上課時間是？",
      "什麼時候開始？"
    ],
    "location": [
      "請問在哪裡上課？",
      "上課地點是？",
      "要在哪個教室？"
    ],
    "teacher": [
      "請問是哪位老師授課？",
      "老師的姓名是？",
      "誰來教這堂課？"
    ]
  },
